<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="416.0" prefWidth="448.0" style="-fx-background-color: #a6e3b6;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.deleteAnAccount">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="9.0" layoutY="24.0" prefHeight="50.0" prefWidth="428.0" text="Delete Your Account" textAlignment="CENTER" underline="true">
         <font>
            <Font name="System Bold" size="34.0" />
         </font>
      </Label>
      <Button blendMode="MULTIPLY" layoutX="185.0" layoutY="253.0" mnemonicParsing="false" onAction="#deleteOnAction" prefHeight="25.0" prefWidth="80.0" text="Delete">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Button fx:id="exit" blendMode="MULTIPLY" layoutX="302.0" layoutY="358.0" mnemonicParsing="false" onAction="#exitOnAction" prefHeight="25.0" prefWidth="80.0" text="Exit">
         <font>
            <Font name="System Bold" size="13.0" />
         </font></Button>
      <Label fx:id="warning" alignment="CENTER" contentDisplay="CENTER" layoutX="15.0" layoutY="296.0" prefHeight="34.0" prefWidth="419.0" textAlignment="CENTER" textFill="#e80909">
         <font>
            <Font name="System Bold" size="23.0" />
         </font>
      </Label>


       <TextField fx:id="accountNumber" alignment="CENTER" blendMode="MULTIPLY" depthTest="DISABLE" layoutX="65.0" layoutY="121.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter  Your Account Number">
           <cursor>
               <Cursor fx:constant="TEXT" />
           </cursor>
           <font>
               <Font name="System Bold Italic" size="12.0" />
           </font></TextField>


      <TextField fx:id="reAccountNumber" alignment="CENTER" blendMode="MULTIPLY" depthTest="DISABLE" layoutX="65.0" layoutY="187.0" prefHeight="30.0" prefWidth="300.0" promptText="Re-Type Account Number">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </TextField>


   </children>
</AnchorPane>
